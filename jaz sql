/* First Step */
CREATE DATABASE jaz_creation;

/*Table 1*/
CREATE TABLE customers_info (
    ID INT AUTO_INCREMENT PRIMARY KEY,
    Fullname VARCHAR(100),
    Email VARCHAR(100) UNIQUE,
    User_lvl INT DEFAULT 3, --automatic na itong 3
    Birthday DATE,
    Billing_Address VARCHAR(255),
    Pword VARCHAR(255),
    Profile_Photo VARCHAR(255),
    Created_At TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

/*Table 2*/
CREATE TABLE product_lists (
    Product_ID INT AUTO_INCREMENT PRIMARY KEY,
    Product_Name VARCHAR(100),
    Descrip VARCHAR(300),
    Price DECIMAL(10, 2),
    Stock INT,
    Category VARCHAR(100),
    Images VARCHAR(255),
    Created_At TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

/*Table 3*/
CREATE TABLE order_lists (
    Order_ID INT AUTO_INCREMENT PRIMARY KEY,
    Customer_ID INT,
    Product_ID INT,
    Quantity INT,
    Order_Date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    Status VARCHAR(50),
    FOREIGN KEY (Customer_ID) REFERENCES customers_info(ID),
    FOREIGN KEY (Product_ID) REFERENCES product_lists(Product_ID)
);

/*Table 4*/
CREATE TABLE sales_summary (
    Sale_ID INT AUTO_INCREMENT PRIMARY KEY,
    Order_ID INT,
    Price DECIMAL(10, 2), 
    Total_Amount DECIMAL(10, 2),
    Payment_Status VARCHAR(50),
    Order_Status VARCHAR(50),
    Order_Date TIMESTAMP,  
    FOREIGN KEY (Order_ID) REFERENCES order_lists(Order_ID)
);

/*Table 5*/
CREATE TABLE archive_superadmin (
    Archive_ID INT AUTO_INCREMENT PRIMARY KEY,
    Original_Customer_ID INT,
    Fullname VARCHAR(100),
    User_lvl INT DEFAULT 3, -- 3 for users, 2 for admin, and 1 for super admin
    Birthday DATE,
    Billing_Address VARCHAR(255),
    Pword VARCHAR(255),
    Profile_Photo VARCHAR(255),
    Archived_At TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


/*Table 6*/
CREATE TABLE archive_admin (
    Archive_ID INT AUTO_INCREMENT PRIMARY KEY,
    Original_Customer_ID INT,
    Fullname VARCHAR(100),
    User_lvl INT DEFAULT 0,  -- 0 for guests
    Birthday DATE,
    Billing_Address VARCHAR(255),
    Pword VARCHAR(255),
    Profile_Photo VARCHAR(255),
    Archived_At TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);



